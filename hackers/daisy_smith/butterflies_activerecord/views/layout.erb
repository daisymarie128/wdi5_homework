<!doctype html>
<html lang="en">
<head>
      <meta charset="utf-8">
      <title>Butterfly Database</title>
      <link rel="stylesheet" href="/css/style.css">
    </head>
    <body>
      <div id="container">
        <nav>
          <ul>
          <li><a href="/butterflies">All Butterflies</a></li>
          <li><a href="/butterflies/new">New Butterfly</a><li>
            <li>Families:</li>
            <% @families.each do |family| %>
              <li><a href="/butterflies/family/<%= family['family'] %>"><%= family['family'] %>"</a></li>
              <% end %>
              </ul>
            </nav>
        <%= yield %>
      </div><!--///////////////////////////close container//////////-->
  </body>
  </html>
